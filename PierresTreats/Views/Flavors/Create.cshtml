@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h4>Add a new flavor</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.Label("Select treat")
    @Html.DropDownList("TreatId",(SelectList)ViewBag.MyList, "None")

    <input type="submit" value="Add new flavor" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all flavors", "Index")</p>
<br><hr>
<button type="button" class="btn btn-danger" onclick="window.location.href = '/'">Home</button>
