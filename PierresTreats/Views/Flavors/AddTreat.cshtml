@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Add a treat</h2>

<h4>Add a treat to this flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to flavors", "Index")</p>
<br><hr>
<button type="button" class="btn btn-danger" onclick="window.location.href = '/'">Home</button>
