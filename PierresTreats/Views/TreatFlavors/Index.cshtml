@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.TreatFlavor>;

<h1>Flavor and Treat combinations</h1>

@if (@Model.Count == 0)
{
  <h3>No combinations been added yet!</h3>
}

@foreach (TreatFlavor treatflavor in Model)
{
  <li>@treatflavor.TreatName | @treatflavor.FlavorName</li>
}


<br><hr>
<button type="button" class="btn btn-danger" onclick="window.location.href = '/'">Home</button>
